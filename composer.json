	"license": "GPL-3.0+",
	"version": "1.0.0",
	"keywords": [
		"wordpress",
		"plugin"
	],
	"require": {
		"php": ">=5.4.0"
	},
	"homepage": "https://github.com/rtlearn/wpcs-Li8ning",
	"require-dev": {
		"wp-coding-standards/wpcs": "^2.3",
		"phpcompatibility/phpcompatibility-wp": "^2.1",
        "yoast/phpunit-polyfills": "^1.0"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
    "authors": [
        {
            "name": "Dharmrajsinh Jadeja",
            "email": "jadejadharmraj5@gmail.com"
        }
    ],
	"autoload": {
		"psr-4": {
			"RTSlideshow\\": "src/"
		}
	},
	"scripts": {
		"lint": "phpcs --standard=WordPress src/"
	}	
}
